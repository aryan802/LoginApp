@page
@model UsersListModel

@{
    ViewData["Title"] = "All Registered Users";
}

<h2>All Registered Users</h2>

<table>
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Place</th>
            <th>Phone</th>
            <th>Date of Birth</th>
            <th>Country</th>
            <th>Qualifications</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Users)
        {
            <tr>
                <td>@u.FullName</td>
                <td>@u.Place</td>
                <td>@u.PhoneNumber</td>
                <td>@u.DateOfBirth.ToShortDateString()</td>
                <td>@u.Country</td>
                <td>
                    @if (u.Qualifications != null && u.Qualifications.Any())
                    {
                        @string.Join(", ", u.Qualifications.Select(q => q.Degree))
                    }
                    else
                    {
                        <span>—</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p><a href="/EducationalQualifications">← Back to Qualifications</a></p>



