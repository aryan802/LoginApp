@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post">
    <input asp-for="User.Username" placeholder="Username" /><br />
    <input asp-for="User.FullName" placeholder="Full Name" /><br />
    <input asp-for="User.Password" placeholder="Password" type="password" /><br />
    <input asp-for="User.Place" placeholder="Place" /><br />
    <input asp-for="User.PhoneNumber" placeholder="Phone Number" /><br />
    <input asp-for="User.DateOfBirth" type="date" /><br />
    <input asp-for="User.Country" placeholder="Country" /><br />
    <button type="submit">Register</button>
</form>

<a href="/Login">Already registered? Login</a>
