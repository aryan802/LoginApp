@*
  This is the site-wide layout. Every Razor Page’s content is injected into @RenderBody().
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - LoginApp</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
</head>
<body>
    <!-- ─── HEADER ─────────────────────────────────────────────────────────────────── -->
    <header>
        <div class="container header">
            <h1>LoginApp</h1>
        </div>
    </header>

    <!-- ─── NAVIGATION ─────────────────────────────────────────────────────────────── -->
    <nav>
        <div class="container nav">
            <a href="/Register">Register</a>
            <a href="/Login">Login</a>
            <a href="/UpdateProfile">Profile</a>
            <a href="/EducationalQualifications">Qualifications</a>
            <a href="/UsersList">Users</a>
        </div>
    </nav>

    <!-- ─── MAIN CONTENT ──────────────────────────────────────────────────────────── -->
    <main>
        <div class="container content">
            @RenderBody()  @* Insert each page’s content here *@
        </div>
    </main>

    <!-- ─── FOOTER ────────────────────────────────────────────────────────────────── -->
    <footer>
        <div class="container footer">
            &copy; 2025 LoginApp. All rights reserved.
        </div>
    </footer>
</body>
</html>

