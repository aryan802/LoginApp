@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>

<form method="post">
    <label asp-for="Username">Username</label>
    <input asp-for="Username" placeholder="Your username" />
    <span asp-validation-for="Username"></span>

    <label asp-for="PhoneNumber">Phone Number</label>
    <input asp-for="PhoneNumber" placeholder="Registered phone number" />
    <span asp-validation-for="PhoneNumber"></span>

    <label asp-for="DateOfBirth">Date of Birth</label>
    <input asp-for="DateOfBirth" type="date" />
    <span asp-validation-for="DateOfBirth"></span>

    <label asp-for="NewPassword">New Password</label>
    <input asp-for="NewPassword" type="password" placeholder="Enter new password" />
    <span asp-validation-for="NewPassword"></span>

    <button type="submit">Change Password</button>
</form>

<p><a href="/Login">Back to Login</a></p>
